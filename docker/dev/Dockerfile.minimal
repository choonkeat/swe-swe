# Multi-stage build for swe-swe with minimal runtime
FROM golang:1.23-alpine AS builder

COPY docker/ca-certificates/*.* /usr/local/share/ca-certificates/

# Install build dependencies
RUN update-ca-certificates && apk add --no-cache make git

# Install elm
RUN wget -O elm.gz https://github.com/elm/compiler/releases/download/0.19.1/binary-for-linux-64-bit.gz && \
    gunzip elm.gz && \
    chmod +x elm && \
    mv elm /usr/local/bin/

WORKDIR /build

# Copy go mod files first for better caching
COPY go.mod go.sum ./
RUN go mod download

# Copy elm package file
COPY elm/elm.json elm/elm.json
RUN cd elm && elm make --docs=/tmp/docs.json || true

# Copy source code
COPY . .

# Build the binary
RUN make build

# Final stage - use busybox for minimal OS utilities
FROM busybox:stable-glibc

COPY --from=builder /etc/ssl/certs/ /etc/ssl/certs/
# BusyBox’s wget often looks at /etc/ssl/cert.pem – add a symlink just in case
RUN ln -s /etc/ssl/certs/ca-certificates.crt /etc/ssl/cert.pem
ENV SSL_CERT_DIR=/etc/ssl/certs  # Belt‑and‑braces

# Copy the binary
COPY --from=builder /build/bin/swe-swe /swe-swe

# Create workspace directory
RUN mkdir -p /workspace

WORKDIR /workspace

# Default command
ENTRYPOINT ["/swe-swe"]
